# Sepolia Testnet Configuration
# Get RPC URL from: https://infura.io or https://alchemy.com
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID

# Your wallet private key (never commit this!)
# Get test ETH from: https://sepoliafaucet.com
# For production, use hardware wallet or encrypted key storage
PRIVATE_KEY=your_private_key_here

# Etherscan API key for contract verification
# Get from: https://etherscan.io/apis
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# IPFS Configuration
IPFS_ENDPOINT=http://127.0.0.1:5001
# Alternative: Use Infura IPFS
# IPFS_ENDPOINT=https://ipfs.infura.io:5001

# GitHub token for enhanced features (optional)
GITHUB_TOKEN=your_github_token_here

# Security Settings
ENCRYPTION_KEY=your_32_byte_encryption_key_here
MAX_GAS_PRICE=50000000000
TRANSACTION_TIMEOUT=300000

# Network Configuration
MAINNET_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
POLYGON_RPC_URL=https://polygon-rpc.com
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc

# Backup Configuration
BACKUP_INTERVAL=3600
IPFS_BACKUP_NODES=ipfs.io,dweb.link